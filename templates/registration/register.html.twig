{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="register-form bg-light mt-4 p-4">
            <form method="post" class="row g-3">
                <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

                {{ form_start(form) }}

                <div class="col-12">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-12">
                    {{ form_label(form.password.first, 'Mot de passe') }}
                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-12">
                    {{ form_label(form.password.second, 'Confirmez le mot de passe') }}
                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="col-12">
                    {{ form_label(form.phoneNumber, 'Numéro de téléphone') }}
                    {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="col-12">
                    <button class="btn btn-lg btn-primary float-end" type="submit">
                        Subscribe
                    </button>
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
